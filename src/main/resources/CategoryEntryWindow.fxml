<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene fx:id="categoryEntryScene" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="222.0" prefWidth="335.0" style="-fx-background-color: black;">
      <children>
         <VBox fx:id="categoryWindowContainer" alignment="CENTER" layoutX="8.0" layoutY="6.0" prefHeight="213.0" prefWidth="319.0">
            <children>
               <Label fx:id="categoryInfo" alignment="CENTER" text="New Category" textFill="#f700e5">
                  <VBox.margin>
                     <Insets bottom="10.0" top="10.0" />
                  </VBox.margin>
                  <font>
                     <Font size="17.0" />
                  </font>
               </Label>
               <TextField fx:id="categoryEntryField" maxWidth="-Infinity" prefHeight="26.0" prefWidth="229.0" promptText="Enter category name...">
                  <VBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </VBox.margin>
               </TextField>
               <HBox fx:id="categoryButtonContainer" alignment="TOP_CENTER" prefWidth="200.0">
                  <children>
                     <Button fx:id="categoryAddButton" mnemonicParsing="false" style="-fx-background-color: plum;" text="Add">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Button>
                     <Button fx:id="categoryCancelButton" mnemonicParsing="false" style="-fx-background-color: plum;" text="Cancel">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
            </children>
         </VBox>
      </children></AnchorPane>
</Scene>
